
{
  "rules": {
    "users": {
      "$uid": {
        // Only the authenticated user can read and write to their own data
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "esp32": {
      // Allow read access to all users but write access only to authenticated users
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}

